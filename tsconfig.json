{
  "compilerOptions": {
    "target": "es2017",
    "outDir": "build/main",
    "rootDir": ".",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "lib": [
      "dom", "es2018", "esnext"
    ],
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*", "test/**/*"]
}
